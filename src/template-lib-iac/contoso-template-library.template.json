{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceGroupName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Resource Group that will contain template specs."
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location of the Resource Group (template specs.)"
            }
        },
        "servicePrincipals": {
            "type": "array",
            "metadata": {
                "description": "An array of Service Principal objectIDs for enabling CI/CD for internal teams using template specs."
                // Could be retrieved with: objectid=$(az ad sp list --display-name "{name}" --query [].objectId --output tsv)
            }
        },
        "timeStamp": {
            "type": "string",
            "metadata": {
                "description": "A timestamp string autogenerated from utcNow() function. Do not overwrite."
            },
            "defaultValue": "[utcNow()]"
        }
    },
    "functions": [],
    "variables": {
        // Role definition Id for the Reader role in the central subscription hosting template specs
        "roleDefinitionId": "[concat('/subscriptions/', '74729c08-12f9-49fc-9817-39e6af4041d1', '/providers/Microsoft.Authorization/roleDefinitions/', 'acdd72a7-3385-48ef-bd42-f606fba81ae7')]",
        "env": "[if(contains(parameters('resourceGroupName'), '-prod-rg'), 'prod', 'qa')]" //Required for role assignment GUID

    },
    "resources": [
        {
           // Resource Group for Contoso Template Library (Corp IT)
            "name": "[parameters('resourceGroupName')]",
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2019-10-01",
            "location": "[parameters('location')]",
            "dependsOn": [
            ],
            "tags": {
            }
        },
        {
            // Reference: https://docs.microsoft.com/en-us/azure/azure-resource-manager/templates/cross-scope-deployment
            "name": "[concat('reader-role-assignment-', parameters('timeStamp'), copyIndex('role-assignment-copy'))]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups', parameters('resourceGroupName'))]"
            ],
            "resourceGroup": "[parameters('resourceGroupName')]",
            "copy": {
                "name": "role-assignment-copy",
                "count": "[length(parameters('servicePrincipals'))]"
            },
            "properties": {
                "expressionEvaluationOptions": {
                    "scope": "outer"
                },
                "mode": "Incremental",
                "template": {
                    // Reference: https://docs.microsoft.com/en-us/azure/role-based-access-control/role-assignments-template
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "type": "Microsoft.Authorization/roleAssignments",
                            "apiVersion": "2018-09-01-preview",
                            //"name": "[guid(resourceGroup().id)]",
                            "name": "[guid(concat(parameters('servicePrincipals')[copyIndex('role-assignment-copy')], variables('env')))]",
                            "properties": {
                                "roleDefinitionId": "[variables('roleDefinitionId')]",
                                "principalId": "[parameters('servicePrincipals')[copyIndex('role-assignment-copy')]]"
                            }
                        }
                    ],
                    "outputs": {}
                }
            }
        }
    ],
    "outputs": {}
}