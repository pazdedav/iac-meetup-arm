{
    "properties": {
        "displayName": "cit-storage-enforce_geo_redundancy",
        "policyType": "Custom",
        "mode": "Indexed",
        "description": "This policy ensures that all Storage Accounts are geo-redundant.",
        "metadata": {
            "version": "1.0.0",
            "category": "Storage"
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Storage/storageAccounts"
                    },
                    {
                        "not": {
                            "field": "Microsoft.Storage/storageAccounts/sku.name",
                            "in": [
                                "Standard_GRS",
                                "Standard_RAGRS",
                                "Standard_GZRS",
                                "Standard_RAGZRS"
                            ]
                        }
                    }
                ]
            },
            "then": {
                "effect": "deny"
            }
        }
    },
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "cit-storage-enforce_geo_redundancy"
}