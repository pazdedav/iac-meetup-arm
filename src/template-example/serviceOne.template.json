{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageConfig": {
            "type": "object",
            "metadata": {
                "description": "Storage account configuration in JSON object."
            }
        },
        "vmConfig": {
            "type": "object",
            "metadata": {
                "description": "Virtual machine configuration in JSON object."
            }
        },
        "timeStamp": {
            "type": "string",
            "metadata": {
                "description": "A timestamp string autogenerated from utcNow() function. Do not overwrite."
            },
            "defaultValue": "[utcNow()]"
        }
    },
    "functions": [],
    "variables": {
        "templateLibraryRG": "contoso-templates-lib-rg",
        "storageSpec": {
            "name": "contosoStorage",
            "version": "1.0",
            "deploymentName": "[concat(variables('storageSpec').name, '-templateSpec-deployment-', parameters('timeStamp'))]",
            "templateLinkId": "[resourceId(variables('templateLibraryRG'), 'Microsoft.Resources/templateSpecs/versions', variables('storageSpec').name, variables('storageSpec').version)]"
        },
        "vmSpec": {
            "name": "contosoWindowsVM",
            "version": "1.0",
            "deploymentName": "[concat(variables('vmSpec').name, '-templateSpec-deployment-', parameters('timeStamp'))]",
            "templateLinkId": "[resourceId(variables('templateLibraryRG'), 'Microsoft.Resources/templateSpecs/versions', variables('vmSpec').name, variables('vmSpec').version)]"
        }
    },
    "resources": [
        {
            // Deploys a storage account compliant with Corp IT policies
            "name": "[variables('storageSpec').deploymentName]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "id": "[variables('storageSpec').templateLinkId]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageConfig": "[parameters('storageConfig')]"
                }
            }
        },
        {
            // Deploys a Windows VM compliant with Corp IT policies
            "name": "[variables('vmSpec').deploymentName]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "id": "[variables('vmSpec').templateLinkId]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vmConfig": "[parameters('vmConfig')]"
                }
            }
        }
    ],
    "outputs": {}
}