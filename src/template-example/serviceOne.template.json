{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountConfig": {
            "type": "object",
            "metadata": {
                "description": "Storage account configuration in JSON object."
            }
        },
        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_GRS",
            "allowedValues": [
                "Standard_GRS",
                "Standard_RAGRS",
                "Standard_GZRS",
                "Standard_RAGZRS"
            ]
        },
        "timeStamp": {
            "type": "string",
            "metadata": {
                "description": "A timestamp string autogenerated from utcNow() function. Do not overwrite."
            },
            "defaultValue": "[utcNow()]"
        }
    },
    "functions": [],
    "variables": {
        "templateLibraryRG": "contoso-template-library-prod-rg",
        "storageSpecName": "contosoStorage",
        "storageSpecVersion": "1.0",
        "storageDeploymentName": "[concat(variables('storageSpecName'), '-templateSpec-deployment-', parameters('timeStamp'))]",
        "storageTemplateLinkId": "[resourceId(variables('templateLibraryRG'), 'Microsoft.Resources/templateSpecs/versions', variables('storageSpecName'), variables('storageSpecVersion'))]"
    },
    "resources": [
        {
            // Deploys a storage account compliant with Corp IT policies
            "name": "[variables('storageDeploymentName')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "id": "[variables('storageTemplateLinkId')]"
                },
                "parameters": {
                    "storageAccountConfig": {
                        "value": "[parameters('storageAccountConfig')]"
                    },
                    "storageAccountType": {
                        "value": "[parameters('storageAccountType')]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}